set -e
set -o pipefail

function info() {
	echo "$(basename $0): $1"
}

function fatal() {
	info "$1"
	exit 1
}

[ $$ -eq 1 ] || fatal "must be PID 1"

if [ -d /etc/unbound/bootstrap.d ]
then
	for path in /etc/unbound/bootstrap.d/*
	do
		[ -f "${path}" ] || continue

		name="$(basename "${path}")"

		if [ -x "${path}" ]
		then
			info "running executable: ${name}"
			"${path}"
		elif [ "${path%.sh}" != "${path}" ]
		then
			info "running script: ${name}"
			sh "${path}"
		else
			info "cannot run unsupported script: ${name}"
		fi
	done
fi

exec tini -- unbound -d
